package br.com.ctb.executorsql.util;

import java.io.File;
import java.util.LinkedList;
import java.util.Queue;

public class DiretorioComando {

	private Queue<ArquivoComando> queueArquivoComando = new LinkedList<ArquivoComando>();
	
	public DiretorioComando(File diretorio) {
		for (File arquivo : diretorio.listFiles()) {
			if (arquivo.isFile()) {
				queueArquivoComando.add(new ArquivoComando(arquivo));
			}
		}
	}
	
	public ArquivoComando recuperarProximoArquivo() {
		return queueArquivoComando.poll();
	}
	
	public boolean possuiProximo() {
		return !queueArquivoComando.isEmpty();
	}
	
	public int recuperarTotalArquivos() {
		return queueArquivoComando.size();
	}
}

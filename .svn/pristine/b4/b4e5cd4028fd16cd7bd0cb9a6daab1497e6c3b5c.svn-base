package br.com.ctb.executorsql.listener;

import javax.swing.JProgressBar;

public class ProgressoObserver {
	
	private ProgressoObservable observable;
	private JProgressBar progressBar;
	
	public ProgressoObserver(ProgressoObservable observable, JProgressBar progressBar) {
		this.observable = observable;
		this.progressBar = progressBar;
	}

	public void notificar() {
		progressBar.setValue(Math.round(((float)observable.getArquivoAtual() / (float)observable.getTotalArquivo()) * 100));
		progressBar.update(progressBar.getGraphics());
	}
	
}
